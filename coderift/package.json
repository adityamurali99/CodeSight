{
  "name": "coderift",
  "displayName": "Coderift",
  "publisher": "AdityaMurali",
  "description": "Catch issues. Fix faster. Never leave your editor.",
  "version": "0.0.5",
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "keywords": [
    "AI",
    "Code Review",
    "GPT-4",
    "Python",
    "Automation",
    "Refactoring"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/adityamurali99/Coderift"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:coderift.review"
  ],
  "contributes": {
    "commands": [
      {
        "command": "coderift.review",
        "title": "Coderift: Review Current File"
      }
    ],
    "configuration": {
      "title": "Coderift",
      "properties": {
        "coderift.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Enter your OpenAI API Key to power Coderift reviews.",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}