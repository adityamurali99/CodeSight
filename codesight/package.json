{
  "name": "codesight",
  "displayName": "CodeSight AI",
  "publisher": "AdityaMurali",
  "description": "AI-powered code reviews and quick fixes directly in your editor.",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/adityamurali99/CodeSight",
    "directory": "codesight"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codesight.review",
        "title": "CodeSight: Review Current File"
      }
    ],
    "configuration": {
      "title": "CodeSight AI",
      "properties": {
        "codesight.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Enter your OpenAI API Key to power CodeSight reviews.",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.80.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.16.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}